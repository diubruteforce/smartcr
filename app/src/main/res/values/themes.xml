<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartCR" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <item name="android:windowLightStatusBar" tools:targetApi="23">@bool/use_light_system_bars
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">
            @bool/use_light_system_bars
        </item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/nav_bar_scrim</item>

        <item name="colorOnPrimary">@color/orange_500</item>
        <item name="colorPrimaryDark">@color/orange_200</item>
    </style>

    <style name="Theme.SmartCR.Splash">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SmartCR.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Shohay.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Shohay.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>